<h2 class="text-center mb-4">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'container' }) do |f| %>
  <div class="card shadow-sm p-4">
    <%= render "users/shared/error_messages", resource: resource %>

    <!-- 名前フィールド -->
    <div class="form-group mb-3">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <!-- メールアドレスフィールド -->
    <div class="form-group mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <!-- パスワードフィールド -->
    <div class="form-group mb-3">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">
          (<%= @minimum_password_length %>文字以上)
        </small>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <!-- パスワード確認用フィールド -->
    <div class="form-group mb-3">
      <%= f.label :password_confirmation, "パスワード確認用", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <!-- 新規登録ボタン -->
    <div class="d-flex justify-content-center mt-4">
      <%= f.submit "新規登録", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
