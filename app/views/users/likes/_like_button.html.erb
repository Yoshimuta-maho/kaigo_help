<% if current_user.like?(post) %>
  <%= link_to post_like_path(post), method: :delete,  style: "color: red;", remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>いいね！
  <% end %>
<% else %>
  <%= link_to post_like_path(post), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
  <% end %>
<% end %>