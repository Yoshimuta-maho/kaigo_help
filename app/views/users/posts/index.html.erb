<div class="container mt-4">
  <h1 class="text-center mb-4">投稿一覧</h1>
  <div class="card p-4">
    <table class="table table-striped text-center">
      <thead class="thead-dark">
        <tr>
          <th>題名</th>
          <th>作成したユーザー名</th>
          <th>最終更新日</th>
          <%# <th>いいねの数</th> %>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post_path(post), class: "text-primary" %></td>
            <td>
              <%= link_to user_path(post.user), class: "d-flex align-items-center text-dark text-decoration-none" do %>
                <%= image_tag(post.user.image_icon.present? ? post.user.image_icon : "default_icon.png", class: "rounded-circle mr-2", width: 40, height: 40) %>
                <%= post.user.name %>
              <% end %>
            </td>
            <td><%= post.updated_at.strftime("%Y-%m-%d") %></td>
            <%# <td><%= post.likes.count %></td> <!-- いいね機能実装後に有効化 -->
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
