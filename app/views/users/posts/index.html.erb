<% if @user.present? %>
  <h1><%= @user.name %> の投稿一覧</h1>
<% else %>
  <h1>すべての投稿一覧</h1>
<% end %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <% if @user.present? %>
        <%= link_to post.title, user_post_path(@user, post) %>
      <% else %>
        <%= link_to post.title, post_path(post) %>  <%# すべての投稿一覧の場合 %>
      <% end %>
    </li>
  <% end %>
</ul>
