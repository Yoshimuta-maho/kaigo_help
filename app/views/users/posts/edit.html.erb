<div class="container mt-4">
  <div class="card p-4 shadow-sm">
    <h1 class="text-center mb-4">投稿の編集</h1>

    <%= form_with(model: @post, local: true) do |form| %>
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :title, "タイトル", class: "font-weight-bold" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :body, "内容", class: "font-weight-bold" %>
        <%= form.text_area :body, class: "form-control", rows: 5 %>
      </div>

      <!-- ボタンを中央配置 -->
      <div class="d-flex justify-content-center mt-4">
        <%= form.submit "更新", class: "btn btn-primary mx-2" %>
        <%= link_to '戻る', post_path(@post), class: 'btn btn-secondary mx-2' %>
        <%= link_to '削除', post_path(@post), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }, class: 'btn btn-danger mx-2' %>
      </div>
    <% end %>
  </div>
</div>
