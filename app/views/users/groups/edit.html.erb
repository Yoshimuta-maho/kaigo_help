<!-- app/views/users/groups/edit.html.erb -->
<div class="container mt-4">
  <h1 class="mb-4 text-center">グループ編集</h1>

  <%= form_with(model: @group, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :group_name, class: "form-label" %>
      <%= f.text_field :group_name, class: "form-control", value: @group.group_name %>
    </div>

    <div class="mb-3">
      <%= f.label :genre_id, class: "form-label" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, { include_blank: "--select--" }, { class: "form-control" } %>
    </div>

    <div class="mb-3">
      <%= f.label :group_icon, class: "form-label" %>
      <%= f.file_field :group_icon, class: "form-control" %>
    </div>

    <div class="my-4">
      <%= f.submit "更新する", class: "btn btn-primary" %>
      <%= link_to "戻る", group_path(@group), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
