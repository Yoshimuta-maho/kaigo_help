<!-- app/views/comments/_form.html.erb -->
<%= form_with(model: [ @post, @post_comment ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :comment, "コメント" %>
    <%= form.text_area :comment, placeholder: "コメントを入力してください", class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.submit "コメントする", class: "btn btn-primary" %>
  </div>
<% end %>
