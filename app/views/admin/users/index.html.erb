<h1 class="my-4">ユーザー一覧</h1>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>名前</th>
      <th>Email</th>
      <th>役割</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to '詳細', admin_user_path(user), class: 'btn btn-info btn-sm' %>
          <%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-warning btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%= link_to '新規ユーザーを追加', new_admin_user_path, class: 'btn btn-success' %>
</div>
