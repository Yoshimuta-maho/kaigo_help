<h1 class="my-4">ユーザー情報編集</h1>

<%= form_with(model: @user, url: admin_user_path(@user), local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :role, class: 'form-label' %>
    <%= f.select :role, options_for_select(['admin', 'user'], @user.role), class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit '更新', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to '戻る', admin_user_path(@user), class: 'btn btn-secondary' %>
