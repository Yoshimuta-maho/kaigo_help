<h1 class="my-4"><%= @user.name %> さんの詳細</h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">ユーザー情報</h5>
    <p class="card-text"><strong>Email:</strong> <%= @user.email %></p>
    <p class="card-text"><strong>役割:</strong> <%= @user.role %></p>

    <%= link_to '編集', edit_admin_user_path(@user), class: 'btn btn-warning btn-sm' %>
    <%= link_to '戻る', admin_users_path, class: 'btn btn-secondary btn-sm' %>
  </div>
</div>
