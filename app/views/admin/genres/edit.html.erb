<h1>ジャンル編集</h1>

<%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local: true, html: { enctype: "multipart/form-data" } do |f| %>
  <% if @genre.errors.any? %>
    <div class="alert alert-danger">
      <h4>エラーがあります:</h4>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :genre_name, 'ジャンル名' %>
    <%= f.text_field :genre_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit '更新', class: 'btn btn-primary' %>
    <%= link_to '削除', admin_genre_path(@genre), method: :delete, data: { confirm: 'このグループを削除しますか？' }, class: 'btn btn-danger mt-3' %>
  </div>
<% end %>

<%= link_to '戻る', admin_genres_path, class: 'btn btn-secondary' %>
