<%= form_with model: group, local: true do |form| %>
  <div class="form-group">
    <%= form.label :user_id, 'ユーザー' %>
    <%= form.collection_select :user_id, User.all, :id, :name, { prompt: 'ユーザーを選択' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :group_name, 'グループ名' %>
    <%= form.text_field :group_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :group_icon, 'グループアイコン' %>
    <%= form.file_field :group_icon, class: 'form-control' %>
  </div>

  <%= form.submit '作成', class: 'btn btn-primary' %>
<% end %>
